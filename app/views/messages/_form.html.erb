<%= form_for(message) do |f| %>
  <% if message.errors.any? %>
    <div id="error_explantion">
      <ul>
        <% message.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>

  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>
 
  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', messages_path %>